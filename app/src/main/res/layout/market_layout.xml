<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_balance"
                    style="@style/title_recycler" />

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_service_state"
                    style="@style/title_recycler"
                    android:layout_marginTop="2dp" />

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_market"
                    style="@style/title_recycler" />

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_week_wave"
                    style="@style/title_recycler" />

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_mss_warn"
                    style="@style/title_recycler" />

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_buy_list"
                    style="@style/title_recycler" />

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_vds_message"
                    style="@style/title_recycler" />

                <com.snailyy.numberapplication.TitleRecyclerView
                    android:id="@+id/rv_vds_mss_message"
                    style="@style/title_recycler" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/fl_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55FFFFFF"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>


</FrameLayout>